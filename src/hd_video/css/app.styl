body,html
    width:100%;
    height:100%;
    background: #f2f2f2
    font-size:16px;
*
    margin: 0;
    padding: 0;
    list-style: none;
    border none;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
input, a, textarea, select, button, input[type=button]
    text-decoration none
    border:0;
    outline none
    background:transparent;
/********************************************************/


h1
    text-align: center
    color: rgb(214, 29, 214)
    margin-top: 20px
#dplayer
    width: 650px
    height: 500px
    margin: 30px auto
    background: #f2f2f2;
    cursor: pointer;
    border-radius: 8px;

// @media 媒体查询 
@media only screen and (max-width: 750px)
    #dplayer
        width: 100%